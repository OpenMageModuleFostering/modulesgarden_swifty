<?php $_helper = $this->helper('catalog/output'); ?>
<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell">
    <h2><?php echo $this->__('Similar products') ?></h2>
    <?php // $this->setColumnCount(5); // uncomment this line if you want to have another number of columns. also can be changed in layout ?>
    <?php $_columnCount = $this->getColumnCount(); ?>
    <?php $this->resetItemsIterator() ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
        <ul class="products-grid"  id="upsell-product-table">
        <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
            <li class="item<?php if($_j==0): ?> first<?php elseif($_j==3): ?> last<?php endif; ?>">
                <div class="product_img_container">
                    <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_link, 'small_image'), null, true) ?>" class="product-image">
                        <img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(277); ?>" width="277" height="277" alt="<?php echo $this->stripTags($this->getImageLabel($_link, 'small_image'), null, true) ?>" />
                    </a>
                    <a href="<?php echo $_link->getProductUrl() ?>" class="hover view-more"><?php echo $this->__('View product') ?></a>
                </div>
                <div class="gird_prod_desc">
                    <h2 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>"><?php echo $this->escapeHtml($_link->getName()) ?></a></h2>
                
                    <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                    <div class="actions">
                        <?php if($_link->isSaleable()): ?>
                        <a class="btn-cart hover" onclick="setLocation('<?php echo $this->getAddToCartUrl($_link) ?>')"><span><?php echo $this->__('Add to Cart') ?></span></a>
                        <?php else: ?>
                            <p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p>
                        <?php endif; ?>
                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                <a href="<?php echo $this->helper('wishlist')->getAddUrl($_link) ?>" class="wishlist-icon hover"></a>
                        <?php endif; ?>
                        <ul class="add-to-links">
                            <?php if($_compareUrl=$this->getAddToCompareUrl($_link)): ?>
                                <li><a href="<?php echo $_compareUrl ?>" class="compare-icon hover"></a></li>
                            <?php endif; ?>
                        </ul>
                    </div>
                </div>
            </li>
            <?php else: ?>
            <td class="empty">&nbsp;</td>
            <?php endif; ?>
        <?php endfor; ?>
        </ul>
    <?php endfor; ?>
    <script type="text/javascript">decorateTable('upsell-product-table')</script>
</div>
<?php endif ?>
